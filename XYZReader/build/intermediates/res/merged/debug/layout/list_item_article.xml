<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/list_item_card_view_margin"
    android:layout_marginStart="@dimen/list_item_card_view_margin"
    android:layout_marginRight="@dimen/list_item_card_view_margin"
    android:layout_marginEnd="@dimen/list_item_card_view_margin"
    android:layout_marginTop="@dimen/list_item_card_view_margin"
    android:layout_marginBottom="@dimen/list_item_card_view_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <com.example.xyzreader.ui.DynamicHeightNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@color/photo_placeholder"
        android:contentDescription="@string/decs_card_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|start"
        android:background="@drawable/scrim_gradient">

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Small.Inverse"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/list_item_text_title_padding"
            android:paddingStart="@dimen/list_item_text_title_padding"
            android:paddingTop="@dimen/list_item_text_title_padding"
            android:paddingRight="@dimen/list_item_text_title_padding"
            android:paddingEnd="@dimen/list_item_text_title_padding"
            android:paddingBottom="@dimen/list_item_text_title_padding_bottom"
            android:ellipsize="end"
            android:maxLines="2"
            android:fontFamily="san-serif"
            android:textStyle="bold"
            android:textSize="@dimen/article_list_title_text_size"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/list_item_text_title_padding"
            android:paddingStart="@dimen/list_item_text_title_padding"
            android:paddingRight="@dimen/list_item_text_title_padding"
            android:paddingEnd="@dimen/list_item_text_title_padding"
            android:paddingBottom="@dimen/list_item_text_title_padding"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="san-serif"
            android:textSize="@dimen/article_list_subtitle_text_size"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
